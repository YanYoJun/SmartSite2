<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_background"
    android:clipToPadding="true"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context="com.isoftstone.smartsite.model.tripartite.activity.AddReportActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar3"
        style="@style/toolbar_style"
        app:contentInsetLeft="0dp"
        app:contentInsetStart="0dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageButton
                android:id="@+id/btn_back"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:background="@drawable/btn_back_press_bg"
                android:onClick="onBackBtnClick"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:src="@drawable/bigarrow" />

            <TextView
                android:id="@+id/lab_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="新增巡查计划"
                android:textColor="@color/white"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/btn_save"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:background="@drawable/btn_back_press_bg"
                android:gravity="center"
                android:onClick="onBtnSaveClick"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:text="@string/save"
                android:textColor="@color/title_save"
                android:textSize="12sp"
                android:visibility="visible" />

        </RelativeLayout>
    </android.support.v7.widget.Toolbar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fadingEdge="vertical"
        android:scrollbars="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="54dp"
                    android:background="@color/white"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp">

                    <TextView
                        android:id="@+id/lab_name"
                        style="@style/add_report_lab"
                        android:text="任务名称" />

                    <ImageView
                        android:id="@+id/img_address_down"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="2dp"
                        android:src="@drawable/droparrow"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/edit_address"
                        style="@style/add_report_spinner"
                        android:layout_height="match_parent"
                        android:layout_toLeftOf="@id/img_address_down"
                        android:background="@null"
                        android:gravity="right|center_vertical"
                        android:textColor="@color/des_text_color"
                        android:visibility="gone" />

                    <EditText
                        android:id="@+id/address_edittext"
                        style="@style/add_report_edittext"
                        android:hint="请输入任务名称" />

                </RelativeLayout>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="16dp"
                    android:src="@color/app_background" />

                <!--<ImageView-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_marginLeft="16dp"-->
                <!--android:src="@drawable/shape_listview_year_bg" />-->

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="54dp"
                    android:background="@color/white"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp">

                    <TextView
                        android:id="@+id/lab_address_choose_left"
                        style="@style/add_report_lab"
                        android:text="任务地点" />

                    <ImageView
                        android:id="@+id/img_address_choose"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="2dp"
                        android:src="@drawable/droparrow" />

                    <TextView
                        android:id="@+id/lab_address_choose_right"
                        style="@style/add_report_spinner"
                        android:layout_height="match_parent"
                        android:layout_toLeftOf="@id/img_address_choose"
                        android:background="@null"
                        android:gravity="right|center_vertical"
                        android:text="请选择地点"
                        android:textColor="@color/des_text_color" />
                </RelativeLayout>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="16dp"
                    android:src="@color/app_background" />

                <com.isoftstone.smartsite.model.tripartite.view.MyGridView
                    android:id="@+id/grid_view_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"></com.isoftstone.smartsite.model.tripartite.view.MyGridView>
            </LinearLayout>

            <!-- 任务执行人员-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@color/white"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="54dp"
                    android:background="@color/white"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp">

                    <TextView
                        android:id="@+id/lab_people_left"
                        style="@style/add_report_lab"
                        android:text="任务执行人员" />

                    <ImageView
                        android:id="@+id/img_people_down"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="2dp"
                        android:src="@drawable/droparrow" />

                    <TextView
                        android:id="@+id/lab_people_right"
                        style="@style/add_report_spinner"
                        android:layout_height="match_parent"
                        android:layout_toLeftOf="@id/img_people_down"
                        android:background="@null"
                        android:gravity="right|center_vertical"
                        android:text="请选择"
                        android:textColor="@color/des_text_color" />
                </RelativeLayout>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="16dp"
                    android:src="@color/app_background" />

                <com.isoftstone.smartsite.model.tripartite.view.MyGridView
                    android:id="@+id/grid_view_people"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"></com.isoftstone.smartsite.model.tripartite.view.MyGridView>
            </LinearLayout>

            <include
                layout="@layout/view_input_inspect_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"></include>

            <include
                layout="@layout/view_input_report_msg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"></include>
            <!--<fragment-->
            <!--android:id="@+id/frag_reply_inspect_report"-->
            <!--android:name="com.isoftstone.smartsite.model.tripartite.fragment.RevisitFragment"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="match_parent"></fragment>-->
            <Button
                android:id="@+id/btn_add_report_submit"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/selector_submit_bg"
                android:elevation="0dp"
                android:text="@string/submit"
                android:textColor="@color/white"
                android:textSize="16sp"></Button>
        </LinearLayout>
    </ScrollView>

</LinearLayout>